{
  "version": 2,
  "functions": {
    "src/server.js": {
      "runtime": "@vercel/node@latest",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/src/server.js"
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri",
    "JWT_SECRET": "@jwt_secret",
    "MAPBOX_TOKEN": "@mapbox_token",
    "OPENWEATHER_KEY": "@openweather_key",
    "RAPID_API_KEY": "@rapid_api_key",
    "FRONTEND_URLS": "@frontend_urls",
    "PORT": "3000"
  },
  "regions": ["sfo1"]
}
